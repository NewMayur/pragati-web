@model IEnumerable<Pragati.Web.Models.ToDoItem>
@{
    ViewBag.Title = "ToDo List";
}

<div class="container mt-5">
    <h2 class="mb-4">ToDo List</h2>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.TextBox("task", "", new { @class = "form-control", placeholder = "Enter a task" })
        </div>
        <button type="submit" class="btn btn-primary mb-3">Add Task</button>
    }
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Task</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Id</td>
                    <td>@task.TaskName</td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = task.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
